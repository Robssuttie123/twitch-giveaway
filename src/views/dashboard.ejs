<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <title>Giveaway Dashboard</title>

  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png">

  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg-gradient: linear-gradient(135deg, #4facfe, #8e44ad);
      --text-color: white;
      --entry-box-bg: rgba(255, 255, 255, 0.1);
      --input-bg: white;
      --input-text: black;
      --button-bg: #3498db;
      --button-hover-bg: #2980b9;
      --kick-bg: #e74c3c;
      --kick-hover-bg: #c0392b;
    }

    [data-theme="dark"] {
      --bg-gradient: linear-gradient(135deg, #1c1c1c, #2c3e50);
      --text-color: #f0f0f0;
      --entry-box-bg: rgba(255, 255, 255, 0.05);
      --input-bg: #333;
      --input-text: #fff;
      --button-bg: #555;
      --button-hover-bg: #777;
      --kick-bg: #c0392b;
      --kick-hover-bg: #922b21;
    }

    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      background: var(--bg-gradient);
      font-family: 'Montserrat', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      color: var(--text-color);
      text-align: center;
      transition: background 0.5s ease;
    }

    h1 {
      margin-top: 2em;
      font-size: 2.5em;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
    }

    .dashboard-content {
      margin-top: 2em;
      width: 100%;
      max-width: 600px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.2em;
    }

    .entries-count {
      font-size: 1.5em;
      font-weight: bold;
    }

    .entry-list-box {
      padding: 0.8em 1em;
      background: var(--entry-box-bg);
      border-radius: 12px;
      width: 80%;
      max-width: 400px;
      max-height: 200px;
      overflow-y: auto;
    }

    .entry-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .entry-list li {
      text-align: left;
      padding: 0.3em 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .kick-button {
      background-color: var(--kick-bg);
      color: white;
      border: none;
      border-radius: 6px;
      padding: 0.4em 0.8em;
      font-size: 0.9em;
      font-family: 'Montserrat', sans-serif;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .kick-button:hover {
      background-color: var(--kick-hover-bg);
    }

    .button-row {
      display: flex;
      gap: 0.8em;
      flex-wrap: wrap;
      justify-content: center;
    }

    button, select, input[type="text"] {
      padding: 0.5em 1em;
      font-size: 1em;
      border-radius: 6px;
      border: none;
      background-color: var(--input-bg);
      color: var(--input-text);
    }

    button {
      background-color: var(--button-bg);
      color: white;
      cursor: pointer;
    }

    button:hover {
      background-color: var(--button-hover-bg);
    }

    .green-button {
      background-color: #2ecc71;
    }

    .green-button:hover {
      background-color: #27ae60;
    }

    .overlay-box {
      display: flex;
      align-items: center;
      gap: 0.5em;
      justify-content: center;
    }

    .overlay-box input {
      width: 280px;
      background-color: var(--input-bg);
      color: var(--input-text);
    }

    .winner-name {
      font-size: 1.4em;
      font-weight: bold;
      color: gold;
      margin-top: 0.5em;
    }

    .warning-box {
      color: #ffc107;
      font-weight: bold;
    }

    footer {
      margin-top: auto;
      padding: 2em 1em 1em;
      font-size: 0.9em;
      opacity: 0.8;
      text-align: center;
    }

    .copy-toast {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.95);
      background: rgba(46, 204, 113, 0.95);
      color: white;
      padding: 1em 2em;
      border-radius: 10px;
      font-size: 1.2em;
      font-weight: bold;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease, transform 0.4s ease;
      z-index: 9999;
    }

    .copy-toast.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    /* ðŸŒ— Dark mode toggle */
    .dark-toggle {
      position: absolute;
      top: 1em;
      right: 1em;
      display: flex;
      align-items: center;
      gap: 0.4em;
      cursor: pointer;
    }

    .toggle-switch {
      position: relative;
      width: 50px;
      height: 24px;
      background: #ccc;
      border-radius: 50px;
      transition: background 0.3s;
    }

    .toggle-switch::after {
      content: '';
      position: absolute;
      width: 22px;
      height: 22px;
      background: white;
      border-radius: 50%;
      top: 1px;
      left: 1px;
      transition: transform 0.3s;
    }

    [data-theme="dark"] .toggle-switch {
      background: #444;
    }

    [data-theme="dark"] .toggle-switch::after {
      transform: translateX(26px);
    }
  </style>
</head>
<body>
  <!-- ðŸŒ— Toggle -->
  <div class="dark-toggle" onclick="toggleTheme()">
    <div class="toggle-switch"></div>
  </div>

  <h1>GIVEAWAY DASHBOARD</h1>

  <!-- [REMAINDER OF YOUR EXISTING DASHBOARD CONTENT GOES HERE UNCHANGED] -->
  <!-- (Keep your <div class="dashboard-content"> and everything after it as-is) -->

  <script>
    // Persist theme
    const html = document.documentElement;
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'dark') html.setAttribute('data-theme', 'dark');

    function toggleTheme() {
      const isDark = html.getAttribute('data-theme') === 'dark';
      html.setAttribute('data-theme', isDark ? 'light' : 'dark');
      localStorage.setItem('theme', isDark ? 'light' : 'dark');
    }
  </script>
</body>
</html>
