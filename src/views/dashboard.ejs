<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Giveaway Dashboard</title>

  <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png">
  <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png">

  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600&display=swap" rel="stylesheet">
  <style>
    :root {
      --bg-gradient-light: linear-gradient(135deg, #4facfe, #8e44ad);
      --bg-gradient-dark: linear-gradient(135deg, #2c3e50, #000000);
      --text-color-light: white;
      --text-color-dark: #f0f0f0;
      --input-bg-dark: #333;
      --input-color-dark: #f0f0f0;
    }

    body {
      margin: 0;
      padding: 0;
      min-height: 100vh;
      font-family: 'Montserrat', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
      color: var(--text-color-light);
      text-align: center;
      background: var(--bg-gradient-light);
      transition: background 0.5s, color 0.3s;
    }

    body.dark {
      background: var(--bg-gradient-dark);
      color: var(--text-color-dark);
    }

    h1 {
      margin-top: 2em;
      font-size: 2.5em;
      text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.3);
    }

    .dark-mode-toggle {
      position: absolute;
      top: 1em;
      right: 1em;
      display: flex;
      align-items: center;
      gap: 0.5em;
    }

    .toggle-switch {
      position: relative;
      display: inline-block;
      width: 50px;
      height: 24px;
    }

    .toggle-switch input {
      display: none;
    }

    .slider {
      position: absolute;
      cursor: pointer;
      top: 0; left: 0;
      right: 0; bottom: 0;
      background-color: #ccc;
      transition: 0.4s;
      border-radius: 24px;
    }

    .slider:before {
      content: "‚òÄÔ∏è";
      position: absolute;
      height: 18px;
      width: 18px;
      left: 4px;
      bottom: 3px;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 12px;
      background-color: white;
      border-radius: 50%;
      transition: transform 0.4s, content 0.4s;
    }

    input:checked + .slider {
      background-color: #2ecc71;
    }

    input:checked + .slider:before {
      transform: translateX(26px);
      content: "üåô";
    }

    .dashboard-content {
      margin-top: 2em;
      width: 100%;
      max-width: 600px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1.2em;
    }

    .entries-count {
      font-size: 1.5em;
      font-weight: bold;
    }

    .entry-list-box {
      padding: 0.8em 1em;
      background: rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      width: 80%;
      max-width: 400px;
      max-height: 200px;
      overflow-y: auto;
    }

    body.dark .entry-list-box {
      background: rgba(255, 255, 255, 0.05);
    }

    .entry-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .entry-list li {
      text-align: left;
      padding: 0.3em 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .kick-button {
      background-color: #e74c3c;
      color: white;
      border: none;
      border-radius: 6px;
      padding: 0.4em 0.8em;
      font-size: 0.9em;
      font-family: 'Montserrat', sans-serif;
      cursor: pointer;
      transition: background-color 0.2s;
    }

    .kick-button:hover {
      background-color: #c0392b;
    }

    .button-row {
      display: flex;
      gap: 0.8em;
      flex-wrap: wrap;
      justify-content: center;
    }

    button, select, input[type="text"] {
      padding: 0.5em 1em;
      font-size: 1em;
      border-radius: 6px;
      border: none;
      background-color: white;
      color: black;
    }

    body.dark button,
    body.dark input,
    body.dark select {
      background-color: var(--input-bg-dark);
      color: var(--input-color-dark);
    }

    button {
      background-color: #3498db;
      color: white;
      cursor: pointer;
    }

    button:hover {
      background-color: #2980b9;
    }

    .green-button {
      background-color: #2ecc71;
    }

    .green-button:hover {
      background-color: #27ae60;
    }

    .overlay-box {
      display: flex;
      align-items: center;
      gap: 0.5em;
      justify-content: center;
    }

    .overlay-box input {
      width: 280px;
    }

    .winner-name {
      font-size: 1.4em;
      font-weight: bold;
      color: gold;
      margin-top: 0.5em;
    }

    .warning-box {
      color: #ffc107;
      font-weight: bold;
    }

    footer {
      margin-top: auto;
      padding: 2em 1em 1em;
      font-size: 0.9em;
      opacity: 0.8;
      text-align: center;
    }

    .copy-toast {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%) scale(0.95);
      background: rgba(46, 204, 113, 0.95);
      color: white;
      padding: 1em 2em;
      border-radius: 10px;
      font-size: 1.2em;
      font-weight: bold;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
      opacity: 0;
      pointer-events: none;
      transition: opacity 0.4s ease, transform 0.4s ease;
      z-index: 9999;
    }

    .copy-toast.show {
      opacity: 1;
      transform: translate(-50%, -50%) scale(1);
    }

    #koFiContainer {
      position: fixed;
      bottom: 10px;
      right: 10px;
      z-index: 1000;
    }
  </style>
</head>
<body>
  <!-- Dark Mode Toggle -->
  <div class="dark-mode-toggle">
    <label class="toggle-switch">
      <input type="checkbox" id="darkModeSwitch">
      <span class="slider"></span>
    </label>
  </div>

  <h1>GIVEAWAY DASHBOARD</h1>

  <div class="dashboard-content">
    <div class="entry-list-box">
      <div class="entries-count">Entries: <%= entries.length %></div>
      <ul class="entry-list">
        <% if (entries.length === 0) { %>
          <li class="no-entries">No entries yet</li>
        <% } else { %>
          <% entries.forEach(entry => { %>
            <li>
              <span><%= entry.username %></span>
              <form action="/dashboard/kick/<%= entry.username %>" method="POST" style="margin: 0;">
                <button type="submit" class="kick-button">Kick</button>
              </form>
            </li>
          <% }) %>
        <% } %>
      </ul>
    </div>

    <div class="button-row">
      <form action="/dashboard/restart" method="POST">
        <button type="submit">Restart Giveaway</button>
      </form>

      <form action="/dashboard/pick-winners" method="POST" style="display: flex; align-items: center; gap: 0.5em;">
        <button class="green-button" type="submit">Pick Winner(s)</button>
        <select id="numWinners" name="numWinners">
          <% for (let i = 1; i <= 10; i++) { %>
            <option value="<%= i %>"><%= i %></option>
          <% } %>
        </select>
      </form>
    </div>

    <form action="/dashboard/command" method="POST" class="button-row">
      <input type="text" name="command" autocomplete="off" value="<%= user.command %>" placeholder="Enter custom command" style="width: 100px;">
      <button type="submit">Set Command</button>
    </form>

    <% if (commandUpdated) { %>
      <div id="commandSuccess" style="color: #2ecc71; font-weight: bold; margin-top: 0.5em;">
        ‚úÖ <%= commandUpdated %>
      </div>
    <% } %>

    <% if (warning) { %>
      <div class="warning-box"><%= warning %></div>
    <% } %>

    <% if (winners.length > 0) { %>
      <div style="margin-top: 1em;">
        <div style="font-size: 1.3em; font-weight: bold;">üéâ Winner<%= winners.length > 1 ? 's' : '' %>:</div>
        <% winners.forEach(name => { %>
          <div class="winner-name"><%= name %></div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <footer>
    <div style="margin-bottom: 1.5em;">
      <p>Your OBS Overlay URL:</p>
      <div class="overlay-box">
        <input type="password" id="displayMasked" value="https://thesimplegiveaway.com/overlay/<%= encryptedTwitchId %>" readonly>
        <input type="hidden" id="realOverlayUrl" value="https://thesimplegiveaway.com/overlay/<%= encryptedTwitchId %>">
        <button type="button" onclick="copyRealUrl()">Copy</button>
      </div>
    </div>
  
    <form action="/logout" method="POST">
      <button type="submit">Logout</button>
    </form>
  
    <div style="display: flex; justify-content: space-between; align-items: center; gap: 1em; flex-wrap: wrap; margin-top: 1em;">
      <p style="margin: 0;">Created by Robssuttie123</p>
      <div id="koFiContainer" style="margin: 0;"></div>
    </div>
  </footer>

  <div id="koFiContainer"></div>

  <div id="copyToast" class="copy-toast">Overlay URL copied!</div>

  <script src="/socket.io/socket.io.js"></script>
  <script>
    const socket = io();
    socket.emit('joinRoom', '<%= encryptedTwitchId %>');

    socket.on('entryUpdate', (data) => {
      const list = document.querySelector('.entry-list');
      const noEntries = document.querySelector('.no-entries');
      if (noEntries) noEntries.remove();

      const li = document.createElement('li');
      const nameSpan = document.createElement('span');
      nameSpan.textContent = data.entry;

      const form = document.createElement('form');
      form.action = `/dashboard/kick/${encodeURIComponent(data.entry)}`;
      form.method = 'POST';
      form.style.margin = '0';

      const btn = document.createElement('button');
      btn.type = 'submit';
      btn.className = 'kick-button';
      btn.textContent = 'Kick';

      form.appendChild(btn);
      li.appendChild(nameSpan);
      li.appendChild(form);
      list.appendChild(li);

      const count = document.querySelector('.entries-count');
      count.textContent = `Entries: ${list.children.length}`;
    });

    socket.on('winnersAnnounced', (data) => {
      data.winners.forEach(winner => {
        const allEntries = document.querySelectorAll('.entry-list li');
        allEntries.forEach(li => {
          if (li.textContent === winner) {
            li.style.color = 'gold';
            li.style.fontWeight = 'bold';
          }
        });
      });
    });

    const successEl = document.getElementById('commandSuccess');
    if (successEl) {
      setTimeout(() => {
        successEl.style.transition = 'opacity 1s';
        successEl.style.opacity = '0';
        setTimeout(() => successEl.remove(), 1000);
      }, 5000);
    }

    function copyRealUrl() {
      const hiddenInput = document.getElementById('realOverlayUrl');
      const temp = document.createElement('input');
      temp.value = hiddenInput.value;
      document.body.appendChild(temp);
      temp.select();
      document.execCommand("copy");
      document.body.removeChild(temp);

      const toast = document.getElementById('copyToast');
      toast.classList.add('show');
      setTimeout(() => {
        toast.classList.remove('show');
      }, 2000);
    }

    const isDark = localStorage.getItem('darkMode') === 'true';
    if (isDark) {
      document.body.classList.add('dark');
      document.getElementById('darkModeSwitch').checked = true;
    }

    document.getElementById('darkModeSwitch').addEventListener('change', function () {
      if (this.checked) {
        document.body.classList.add('dark');
        localStorage.setItem('darkMode', 'true');
      } else {
        document.body.classList.remove('dark');
        localStorage.setItem('darkMode', 'false');
      }
    });
  </script>

  <script src="https://storage.ko-fi.com/cdn/widget/Widget_2.js"></script>
  <script>
    kofiwidget2.init('Support hosting and development', '#428ed7', 'Q5Q51I7LYK');
    kofiwidget2.draw(document.getElementById('koFiContainer'));
  </script>
</body>
</html>
